<%- include('../../header.ejs')%>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <h1 class="text-center">BTECH Registration Form</h1>
                <h3 class="text-center">Do Register Fast!! <%=f.name%>
                </h3>
                <p class="text-center bg-info">In Case Any Query, Kindly Contact:Â 9399892162</p>




                <div class="col-md-5">
                    <img src="images/slider3.jpg" class="img-fluid" alt="slider" width="100%" height="auto">

                </div>
                <div class="col-md-7">
                    <p class="h2 text-center">Form</p>
                    <form action="/formupdate/<%=f._id%>" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            <label>Full Name:</label>
                            <input class="form-control" type="text" name="name" required value="<%= f.name %>"
                                placeholder="Enter Your Full Name" />
                            <span class="Error"></span>
                        </div>
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" type="email" name="email" required value="<%= f.email %>"
                                placeholder="Enter Your Email" />
                            <span class="Error"></span>
                        </div>
                        <div class="form-group">
                            <label>Enter Mobile Number:</label>
                            <input class="form-control" type="number" name="phone" required value="<%= f.phone %>"
                                placeholder="Enter Mobile Number" />
                            <span class="Error"></span>
                        </div>
                        <div class="form-group">
                            <label>Gender:</label><br />
                            <label><input type="radio" name="gender" required value="Male" <%=f.gender=='Male'
                                    ? 'checked' : '' %> > Male</label>
                            <label><input type="radio" name="gender" required value="Female" <%=f.gender=='Female'
                                    ? 'checked' : '' %> > Female</label>
                            <label><input type="radio" name="gender" required value="Other" <%=f.gender=='Other'
                                    ? 'checked' : '' %> > Other</label>
                            <span class="Error"></span>
                        </div>
                        <div class="form-group">
                            <label>D.O.B:</label>
                            <input class="form-control" type="date" name="date" required value="<%= f.date %>"
                                placeholder="Enter Birth Date" />
                            <span class="Error"></span>
                        </div>
                        <div class="form-group">
                            <label>Address:</label>
                            <textarea class="form-control" name="address"><%=f.address%></textarea>
                            <span class="Error"></span>
                        </div>
                        <div class="form-group">
                            <label>Select College:</label>
                            <select class="form-control" value="<%= f.college %>" name="college">
                                <option selected=""> Select College</option>
                                <option <%=f.college=='ITM' ? 'selected' : '' %>>ITM</option>
                                <option <%=f.college=='MITS' ? 'selected' : '' %>>MITS</option>
                                <option <%=f.college=='RJIT' ? 'selected' : '' %>>RJIT</option>
                                <option <%=f.college=='IPS' ? 'selected' : '' %>>IPS</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Select Branch:</label>
                            <select class="form-control" value="<%= f.branch %>" name="branch">
                                <option selected=""> Select Branch</option>
                                <option <%=f.branch=='CSE' ? 'selected' : '' %>>CSE</option>
                                <option <%=f.branch=='IT' ? 'selected' : '' %>>IT</option>
                                <option <%=f.branch=='EC' ? 'selected' : '' %>>EC</option>
                                <option <%=f.branch=='ME' ? 'selected' : '' %>>ME</option>
                                <option <%=f.branch=='CE' ? 'selected' : '' %>>CE</option>
                            </select>
                        </div>


                        <div class="form-group">
                            <input class="btn btn-primary btn-block" type="submit" value="Submit" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <%- include('../../footer.ejs')%>